{
  "name": "ROS Noetic Development Container",
  "dockerComposeFile": "../devenv/docker-compose.yaml",
  "service": "ros",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-iot.vscode-ros"
      ]
    }
  },
  "remoteUser": "openmower",
  "initializeCommand": "bash -c 'echo \"MY_UID=$(id -u)\" > devenv/.env && echo \"MY_GID=$(id -g)\" >> devenv/.env && echo \"MY_USER=${USER}\" >> devenv/.env'",
  "postCreateCommand": "echo 'source /opt/ros/noetic/setup.bash' >> ~/.bashrc"
}