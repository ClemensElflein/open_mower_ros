{
  "name": "ROS Noetic Development Container",
  "dockerComposeFile": "../devenv/docker-compose.yaml",
  "service": "ros",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-iot.vscode-ros"
      ]
    }
  },
  "remoteUser": "dev",
  "postCreateCommand": "echo 'source /opt/ros/noetic/setup.bash' >> ~/.bashrc"
}
